{
  "name" : "Simple Total Balance Calculator",
  "version" : "1.0.1",
  "description" : "Simple extension for calculating your total balance across all Simple accounts. Code can be found at ",
  "author": "Scott Lavigne",

  "manifest_version" : 2,
  "icons" : {
    "16" : "./icons/icon16.png",
    "32" : "./icons/icon32.png",
    "48" : "./icons/icon48.ico",
    "128" : "./icons/icon128.png",
    "140" : "./icons/icon140.png"
  },
  "browser_action" : {
    "default_title" : "Simple Total Calculator",
    "default_icon" : {
      "16" : "./icons/icon16.png",
      "32" : "./icons/icon32.png",
      "48" : "./icons/icon48.ico",
      "128" : "./icons/icon128.png",
      "140" : "./icons/icon140.png"
    }
  },
  "content_scripts" : [
    {
      "matches" : ["*://bank.simple.com/*"],
      "js" : [ "./content.js" ]
    }
  ],
  "short_name" : "Simple Total"
}
